<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo_row_checkbox"
        android:paddingEnd="20dp"
        android:focusable="false"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/todo_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:textSize="18sp"
        android:fontFamily="sans-serif"

        android:layout_toEndOf="@id/todo_row_checkbox"
        android:textColor="@android:color/black" />
    <!--android:layout_alignTop="@id/todo_row_checkbox"
            android:layout_alignBottom="@+id/cbItemCheck"-->
    <TextView
        android:id="@+id/todo_row_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimary"

        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/todo_row_date"
        android:layout_below="@id/todo_row_title"
        android:layout_toEndOf="@id/todo_row_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textColor="#808080"
        android:textStyle="italic" />
</RelativeLayout>
